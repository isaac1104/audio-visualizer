{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "src": ["src"],
      "react-audio-spectrum": ["./src/local-types/react-audio-spectrum"]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/local-types/**"
  ],
  "typeRoots": [
    "node_modules/@types",
    "src/local-types"
  ]
}
